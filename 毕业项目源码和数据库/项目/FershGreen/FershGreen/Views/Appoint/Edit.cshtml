
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutFG.cshtml";
}
@using FershGreen.Models
@model Appointment
<style>
    #item {
        width: 180px;
        height: 35px;
        line-height: 15px;
    }

    #yy {
        position: relative;
        left: 80px;
    }
</style>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/layui/css/layui.css" rel="stylesheet" />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <span class="layui-breadcrumb">
            <a href="">首页</a>
            <a href="">预约管理</a>
            <a><cite>填写类容</cite></a>
        </span>
    </ol>
</nav>
<hr />
<form class="layui-form layui-form-pane" action="/Appoint/Edit" method="post">
    <div class="" style="background: #aeb3b5; height: 25px; line-height: 25px;">
        &nbsp;
        <svg class="bi bi-bookmarks-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="margin-top:-5px">
            <path fill-rule="evenodd" d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12l-5-3-5 3V4z" />
            <path d="M14 14l-1-.6V2a1 1 0 0 0-1-1H4.268A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v12z" />
        </svg>
        <span>体检人信息</span>
    </div><br />
          <div class="layui-form-item" style="margin-left:0px" id="yy">

              <input type="hidden" name="AppID" value="@Model.AppID" />
              <input type="hidden" name="AppName" value="@Model.AppName" />
              <input type="hidden" name="AppStart" value="@Model.AppStart" />
              <input type="hidden" name="AppIsomorphism" value="@Model.AppIsomorphism" />
              <input type="hidden" name="AppEnd" value="@ViewBag.Date" />
              <input type="hidden" name="AppDD" value="1" />


              <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">体检人</label>
              <div class="layui-input-inline">
                  <input type="text" name="InName" readonly value="@ViewBag.Name1" autocomplete="off" class="layui-input " id="item">
              </div>
              <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">检查时间</label>
              <div class="layui-input-inline">
                  <input type="text" name="InTime" readonly lay-verify="required" value="@ViewBag.Date" autocomplete="off" class="layui-input " id="item">
              </div>
              <label class="layui-form-label" style="width:110px;height:35px;line-height:18px" >主治医生</label>
              <div class="layui-input-inline">
                  <input type="text" name="InDoctor" readonly lay-verify="required" placeholder="" value="@Session["Name"]" autocomplete="off" class="layui-input" id="item">
              </div>
          </div>
    <div class="" style="background: #aeb3b5; height: 25px; line-height: 25px;">
        &nbsp;
        <svg class="bi bi-bookmarks-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="margin-top:-5px">
            <path fill-rule="evenodd" d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12l-5-3-5 3V4z" />
            <path d="M14 14l-1-.6V2a1 1 0 0 0-1-1H4.268A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v12z" />
        </svg>
        <span>外科检查结果</span>
    </div><br />
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">身高（cm）</label>
        <div class="layui-input-inline">
            <input type="text" name="SurHeight" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">胸围（cm）</label>
        <div class="layui-input-inline">
            <input type="text" name="SurBust" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">体重（kg）</label>
        <div class="layui-input-inline">
            <input type="text" name="SurWeight" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
    </div>
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">面部</label>
        <div class="layui-input-inline">
            <input type="text" name="SurFace" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">颈部</label>
        <div class="layui-input-inline">
            <input type="text" name="SurNeck" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">脊柱</label>
        <div class="layui-input-inline">
            <input type="text" name="SurSpine" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
    </div>
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">四肢</label>
        <div class="layui-input-inline">
            <input type="text" name="SurLimb" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">关节</label>
        <div class="layui-input-inline">
            <input type="text" name="SurJoint" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">其他</label>
        <div class="layui-input-inline">
            <input type="text" name="SurOther" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
        <input type="hidden" name="SInID" />
    </div>
    <div class="" style="background: #aeb3b5; height: 25px; line-height: 25px;">
        &nbsp;
        <svg class="bi bi-bookmarks-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="margin-top:-5px">
            <path fill-rule="evenodd" d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12l-5-3-5 3V4z" />
            <path d="M14 14l-1-.6V2a1 1 0 0 0-1-1H4.268A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v12z" />
        </svg>
        <span>内科检查结果</span>
    </div><br />
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">血压</label>
        <div class="layui-input-inline">
            
            <input type="text" name="InterBlood" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">脉搏</label>
        <div class="layui-input-inline">
            <input type="text" name="InterPulse" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">心脏及血管</label>
        <div class="layui-input-inline">
            <input type="text" name="InterHeart" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
    </div>
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">神经及精神</label>
        <div class="layui-input-inline">
            <input type="text" name="InterNerve" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">肺及呼吸道</label>
        <div class="layui-input-inline">
            <input type="text" name="InterLung" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">腹部器官</label>
        <div class="layui-input-inline">
            <input type="text" name="InterAbdomen" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
    </div>
    <div class="layui-form-item" style="margin-left:0px" id="yy">

        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">肝</label>
        <div class="layui-input-inline">
            <input type="text" name="InterLiver" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">脾</label>
        <div class="layui-input-inline">
            <input type="text" name="InterSpleen" lay-verify="required" placeholder="" autocomplete="off" class="layui-input " id="item">
        </div>
        <label class="layui-form-label" style="width:110px;height:35px;line-height:18px">胸部透视</label>
        <div class="layui-input-inline">
            <input type="text" name="InterChest" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" id="item">
        </div>
        <input type="hidden" name="DInID" />
    </div>
    <div class="" style="background: #aeb3b5; height: 25px; line-height: 25px;">
        &nbsp;
        <svg class="bi bi-bookmarks-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="margin-top:-5px">
            <path fill-rule="evenodd" d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12l-5-3-5 3V4z" />
            <path d="M14 14l-1-.6V2a1 1 0 0 0-1-1H4.268A2 2 0 0 1 6 0h6a2 2 0 0 1 2 2v12z" />
        </svg>
        <span>体检结果</span>
    </div>
    <br />
    <br />
    <div class="layui-form-item" style="margin-left:60px">
        <div style="padding-left:18px">
            <label class="layui-form-label" style="height:65px; line-height:40px;width:120px">体检信息描述</label>
            <div class="" style="margin-top:-10px">
                <textarea placeholder="请输入内容" readonly name="ConDescribe" rows="4" cols="110">@Model.AppIsomorphism</textarea>
            </div>
        </div>   <br /><br />
        <div style="padding-left:18px">
            <label class="layui-form-label" style="height:70px; line-height:40px;width:120px">体检结论</label>
            <div class="" style="margin-top:-10px">
                <textarea placeholder="请输入内容" name="ConConclu" rows="4" cols="110"></textarea>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <button class="layui-btn" lay-submit="" lay-filter="demo2">添加</button>
    </div>
</form>
<div>
    @Html.ActionLink("返回", "Index")
</div>
<script src="~/layui/layui.js"></script>